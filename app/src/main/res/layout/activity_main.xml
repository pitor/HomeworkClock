<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorAppBg"
    >

    <LinearLayout
        android:id="@+id/bottombar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        >
        <ImageButton
            android:id="@+id/resetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_refresh_white_24dp"
            android:tint="@color/colorTimerText"
            android:background="?android:selectableItemBackground"
            android:padding="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@android:color/primary_text_light"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        android:layout_above="@id/bottombar">
        <clock2x.apps.a04.dk.homeworkclock.TimerView
            android:id="@+id/timer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorGoodTimeBg">
        </clock2x.apps.a04.dk.homeworkclock.TimerView>
        <clock2x.apps.a04.dk.homeworkclock.TimerView
            android:id="@+id/timer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorBadTimeBg">
        </clock2x.apps.a04.dk.homeworkclock.TimerView>
    </LinearLayout>

</RelativeLayout>